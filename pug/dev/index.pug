doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(rel='icon' type='image/x-icon' href='favicon.ico')

        title some title

        link(rel='stylesheet' href='./styles/header.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100;200;300;400;500;600;700;800;900&display=swap\" rel=\"stylesheet" rel="stylesheet")

    body
        mixin btn(text)
            li.header-text= text
        mixin icon(name)
            img(src=`src/${name}.svg`)
        mixin catalogCard(title, url, imgName, ...text)
            .catalog-card
                .card-img
                    img(src=`src/cards/${imgName}.png`)
                .card-text
                    h2.card-text-title= title
                    .card-text-list
                        if (text > 0)
                        each string in text
                            a.card-text-a(href=`${url}`)= string
                    a.card-btn(href=`https://www.google.ru/`) показать все
        header.header
            .header-logo
                img(src='src/logo.png')
            .header-production
                img(src='src/menu.svg')/ продукция
            ul.header-other
                - let headerOther = ['о компании', 'услуги', 'дилерам', 'контакты', 'доставка и оплата']
                each elem in headerOther
                    //li.header-text= elem
                    +btn(elem)
            .header-schedule
                a(href="tel:+78005055955") +7(800) 505-59-55
                .header-gray-text Пн-Пт 9:00 - 18:00
            .header-icons
                - let images = ['user', 'basket', 'graph', 'like']
                each img in images
                    +icon(img)


        form.search
            input.search-input(placeholder='Поиск')
            button.search-btn
                img(src=`src/magnifier.svg`)


        .main
            .stage
                .stage-text
                    h1 Крупнейший производитель изделий из пластмасс
                    hr
                    p Работаем с 1992 года
            .catalog
                h2 Каталог
                .catalog-cards
                    +catalogCard ('Изделия ротационного формирования', 'https://www.google.ru/', 'card1', 'текст 1', 'текст 2', 'текст 3', 'текст 4', 'card1', 'текст 1', 'текст 2', 'текст 3', 'текст 4', 'card1', 'текст 1', 'текст 2', 'текст 3', 'текст 4')
                    +catalogCard ('Изделия ротационного формирования', 'https://www.google.ru/', 'card1', 'текст 1', 'достаточно длинный текст чтобы занимать больше чем одну строку', 'текст 2', 'текст 3', 'текст 4', 'текст 2', 'текст 3', 'текст 4', 'текст 2', 'текст 3', 'текст 4')
                    +catalogCard ('Полименрные материалы: капролон, полиамид 6, полиамид 66, полиацеталь, полиэтилен, полипропилен, ПВХ, РЕЕК, PPSU', 'https://www.google.ru/', 'card2', 'текст 1', 'текст 2')
                    +catalogCard ('Комплектующие для баков', 'https://www.google.ru/', 'card3', '')
                    +catalogCard ('Комплектующие для баков', '', 'card4')





